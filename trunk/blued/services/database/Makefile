include ../../../Makefile.inc

#
#	Object file generation
#
CPPS = $(wildcard *.cpp ../../*.cpp ../../../cbus/*.cpp ../../../common/*.cpp ../../../libbluetool/linux/*.cpp)
OBJS = $(addsuffix .o, $(basename $(CPPS) ) )

all:		$(RULEFILE) $(OBJS) database

clean:
		rm -v $(OBJS) ;	rm -v $(RULEFILE)

database:	$(OBJS)
		g++ $(OBJS) $(LDFLAGS) -o bluetool-database

#
#	Autogenerated rules
#
include $(RULEFILE)

rules:		$(RULEFILE)

$(RULEFILE):
		gcc $(ALLCFLAGS) -MM $(CPPS) > $(RULEFILE) 


