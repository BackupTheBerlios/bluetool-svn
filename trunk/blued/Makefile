include ../Makefile.inc

#
#	Object file generation
#
CPPS = $(wildcard *.cpp ./hci/*.cpp ./sdp/*.cpp ../cbus/*.cpp ../common/*.cpp ../libbluetool/linux/*.cpp ../hal/*.cpp)
OBJS = $(addsuffix .o, $(basename $(CPPS) ) )

all:		$(RULEFILE) $(OBJS)

clean:
		rm -v $(OBJS) ;	rm -v $(RULEFILE)

blued:	$(OBJS)
		g++ $(OBJS) $(LDFLAGS) -o blued

#
#	Autogenerated rules
#
include $(RULEFILE)

rules:		$(RULEFILE)

$(RULEFILE):
		gcc $(ALLCFLAGS) -MM $(CPPS) > $(RULEFILE) 


